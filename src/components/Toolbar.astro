---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<header class="toolbar">
	<h1>{title}</h1>
</header>

<style>
	.toolbar {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		height: 48px;
		background: #1a1a1a;
		border-bottom: 1px solid #3a3a3a;
		display: flex;
		align-items: center;
		padding: 0 24px;
		z-index: 200;
	}

	h1 {
		margin: 0;
		font-size: 18px;
		font-weight: 500;
		color: #ffffff;
	}
</style>
