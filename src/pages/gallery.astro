---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Gallery">
	<h2>Image Gallery</h2>

	<section class="gallery-section">
		<h3>Featured Images</h3>
		<div class="image-grid">
			<div class="image-card">
				<img src="/images/sample.svg" alt="Sample image 1" />
				<div class="image-info">
					<h4>Mountain Landscape</h4>
					<p>Beautiful mountain scenery at sunset</p>
				</div>
			</div>

			<div class="image-card">
				<img src="/images/sample.svg" alt="Sample image 2" />
				<div class="image-info">
					<h4>Ocean View</h4>
					<p>Peaceful ocean waves and blue sky</p>
				</div>
			</div>

			<div class="image-card">
				<img src="/images/sample.svg" alt="Sample image 3" />
				<div class="image-info">
					<h4>Forest Path</h4>
					<p>Winding trail through dense forest</p>
				</div>
			</div>

			<div class="image-card">
				<img src="/images/sample.svg" alt="Sample image 4" />
				<div class="image-info">
					<h4>City Lights</h4>
					<p>Urban skyline at night</p>
				</div>
			</div>

			<div class="image-card">
				<img src="/images/sample.svg" alt="Sample image 5" />
				<div class="image-info">
					<h4>Desert Dunes</h4>
					<p>Golden sand dunes at dawn</p>
				</div>
			</div>

			<div class="image-card">
				<img src="/images/sample.svg" alt="Sample image 6" />
				<div class="image-info">
					<h4>Snowy Peak</h4>
					<p>Snow-capped mountain summit</p>
				</div>
			</div>
		</div>
	</section>

	<section class="details-section">
		<h3>Image Details</h3>
		<div class="details-grid">
			<div class="detail-item">
				<span class="detail-label">Total Images:</span>
				<span class="detail-value">6</span>
			</div>
			<div class="detail-item">
				<span class="detail-label">Format:</span>
				<span class="detail-value">SVG</span>
			</div>
			<div class="detail-item">
				<span class="detail-label">Resolution:</span>
				<span class="detail-value">400x300</span>
			</div>
			<div class="detail-item">
				<span class="detail-label">Storage:</span>
				<span class="detail-value">Local</span>
			</div>
		</div>
	</section>
</MainLayout>

<style>
	.gallery-section {
		margin-bottom: 32px;
	}

	.gallery-section h3 {
		color: #ffffff;
		margin-bottom: 20px;
	}

	.image-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: 24px;
	}

	.image-card {
		background: #2d2d2d;
		border-radius: 8px;
		border: 1px solid #3a3a3a;
		overflow: hidden;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	.image-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
	}

	.image-card img {
		width: 100%;
		height: 200px;
		object-fit: cover;
		display: block;
	}

	.image-info {
		padding: 16px;
	}

	.image-info h4 {
		margin: 0 0 8px 0;
		font-size: 16px;
		color: #ffffff;
	}

	.image-info p {
		margin: 0;
		font-size: 14px;
		color: #a0a0a0;
	}

	.details-section {
		background: #2d2d2d;
		padding: 24px;
		border-radius: 8px;
		border: 1px solid #3a3a3a;
	}

	.details-section h3 {
		margin-top: 0;
		margin-bottom: 16px;
		color: #ffffff;
	}

	.details-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 16px;
	}

	.detail-item {
		background: #1a1a1a;
		padding: 16px;
		border-radius: 6px;
		border: 1px solid #3a3a3a;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.detail-label {
		font-size: 14px;
		color: #a0a0a0;
	}

	.detail-value {
		font-size: 16px;
		font-weight: 600;
		color: #667eea;
	}
</style>
