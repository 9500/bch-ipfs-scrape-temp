{
  "name": "bch-ipfs-scrape",
  "type": "module",
  "version": "1.0.0",
  "description": "Console app to resolve, export, and fetch Bitcoin Cash Metadata Registry (BCMR) data from the blockchain",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "bundle": "npm run build && esbuild dist/index.js --bundle --platform=node --format=cjs --outfile=dist/bundled.cjs",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "pkg": "npm run bundle && pkg dist/bundled.cjs --compress GZip",
    "pkg:test": "npm run bundle && pkg dist/bundled.cjs --targets node20-linux-x64 --compress GZip --output test-binary"
  },
  "bin": {
    "bch-ipfs-scrape": "dist/index.js"
  },
  "pkg": {
    "targets": [
      "node20-linux-x64",
      "node20-linux-arm64"
    ],
    "outputPath": "bin",
    "scripts": []
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "dotenv": "^16.4.5",
    "multiformats": "^13.4.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "@yao-pkg/pkg": "^6.10.1",
    "esbuild": "^0.24.2",
    "typescript": "^5.3.3"
  }
}
